{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,   
        "outDir": "dist",
        "noImplicitAny": true,
        
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "moduleResolution": "node",
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "jest",
            "@types/jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test"
    ]
}