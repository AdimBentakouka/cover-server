{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "dist",
		"rootDir": ".",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": "./src/*",
		"paths": {
			"*": ["node_modules/*"]
		},
		"typeRoots": ["./src/**/*.d.ts", "./src/types", "./node_modules/@types"],
		"types": ["jest", "@types/jest", "node"]
	},
	"include": ["src/**/*.ts", "src/views/*", "test"]
}
